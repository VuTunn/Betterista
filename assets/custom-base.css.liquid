
/* CUSTOM LAYOUT */
.section-container{max-width: {{ settings.page_container }}px;margin: 0 auto;}
.page-full{max-width: 100%;width: 100%;}

.padding-base{padding: 0 16px;}
@media (min-width: 768px){.padding-base{padding: 0 24px;}}
@media (min-width: 1024px){.padding-base{padding: 0 32px;}}
@media (min-width: 1440px){.padding-base{padding: 0 40px;}}

.title{font-size: 24px;line-height: 32px;}
@media (min-width: 768px){.title{font-size: 32px;line-height: 40px;}}
@media (min-width: 1024px){.title{font-size: 40px;line-height: 48px;}}
@media (min-width: 1440px){.title{font-size: 48px;line-height: 56px;}}

.description{font-size: 14px;line-height: 16px;}
@media (min-width: 768px){.description{font-size: 16px;line-height: 20px;}}
@media (min-width: 1024px){.description{font-size: 18px;line-height: 22px;}}
@media (min-width: 1440px){.description{font-size: 18px;line-height: 22px;}}