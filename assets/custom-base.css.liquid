
/* CUSTOM LAYOUT */
.section-container {
    max-width: {{ settings.page_container }}px;
    margin: 0 auto;
}
.page-full {
    max-width: 100%;
    width: 100%;
}

/* BASE CSS */
.block{display: block;}
.flex{display: flex;}
.hidden{display: flex;}

.absolute{position: absolute;}
.relative{position: relative;}
.fixed{position: fixed;}
.sticky{position: sticky;}

.padding-base{padding: 0 16px;}
@media (min-width: 768px){.padding-base{padding: 0 24px;}}
@media (min-width: 1024px){.padding-base{padding: 0 32px;}}
@media (min-width: 1440px){.padding-base{padding: 0 40px;}}

/* Image */
.image-full {
    width: 100%;
    height: auto;
    object-fit: cover;
}

/* Breakpoint */
.mobile {
    display: block;
}
.desktop {
    display: none;
}
@media (min-width: 768px) {
    .mobile {
        display: none;
    }
    .desktop {
        display: none;
    }
}
@media (min-width: 1024px) {
    .mobile {
        display: none;
    }
    .desktop {
        display: block;
    }
}